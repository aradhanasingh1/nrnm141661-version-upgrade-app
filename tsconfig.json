{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node", "express"]
  },
  "include": ["server/**/*", "pages/**/*", "theme.js"],
  "exclude": ["node_modules"]
}
